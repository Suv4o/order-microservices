{
  "name": "order-microservices",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "npm run build:producer && npm run build:persistence && npm run build:notification",
    "build:producer": "nest build order-producer",
    "build:persistence": "nest build order-persistence",
    "build:notification": "nest build order-notification",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:producer": "nest start order-producer",
    "start:producer:dev": "nest start order-producer --watch",
    "start:producer:prod": "node dist/apps/order-producer/main",
    "start:persistence": "nest start order-persistence",
    "start:persistence:dev": "nest start order-persistence --watch",
    "start:persistence:prod": "node dist/apps/order-persistence/main",
    "start:notification": "nest start order-notification",
    "start:notification:dev": "nest start order-notification --watch",
    "start:notification:prod": "node dist/apps/order-notification/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "localstack:start": "docker compose -f localstack/docker-compose.yml up -d",
    "localstack:stop": "docker compose -f localstack/docker-compose.yml down",
    "localstack:logs": "docker compose -f localstack/docker-compose.yml logs -f",
    "localstack:setup": "ts-node --esm scripts/bootstrap-localstack.ts",
    "localstack:bootstrap": "npm run localstack:start && npm run localstack:setup",
    "localstack:env": "bash scripts/load-localstack-env.sh",
    "ses-local:start": "aws-ses-v2-local"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.414.0",
    "@aws-sdk/client-sesv2": "^3.414.0",
    "@aws-sdk/client-sqs": "^3.414.0",
    "@aws-sdk/lib-dynamodb": "^3.414.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@ssut/nestjs-sqs": "^3.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "aws-ses-v2-local": "^2.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/aws-clients(|/.*)$": "<rootDir>/libs/aws-clients/src/$1",
      "^@app/common-dto(|/.*)$": "<rootDir>/libs/common-dto/src/$1"
    }
  }
}
